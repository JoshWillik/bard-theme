<article class="{{post_class}}">
  <header class="post-header">
    <h1><a href="{{url}}" class="permalink">{{title}}</a></h1>
    {{#author}}
      <p class="post-meta">By <a href="{{url}}" class="author">{{name}}</a></p>
    {{/author}}
  </header>

  <div class="post-content">
  {{content}}
  </div>

  {{^is "page"}}
  <hr>

  <footer class="post-footer">
    <p>Posted on
      <time class="post-time" datetime="{{date format='YYYY-MM-DD'}}">{{date}}</time>.
      <a href="{{url}}" class="permalink">Permalink</a>.
    </p>
    {{>post_navigation}}
  </footer>
  {{/is}}
</article>
